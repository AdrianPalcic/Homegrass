{
    "version": 2,
    "builds": [
        {
            "src": "package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        }
    ],
    "routes": [
        {
            "src": "/static/(.*)",
            "headers": {
                "Cache-Control": "public, max-age=31536000, immutable"
            }
        },
        {
            "src": "/(.*\\.js)",
            "headers": {
                "Content-Type": "application/javascript"
            }
        },
        {
            "src": "/sitemap.xml",
            "headers": {
                "Content-Type": "application/xml"
            }
        },
        {
            "src": "/cms/wp-admin/(.*)",
            "dest": "https://artificialgrass.hr/homegrass.hr/cms/wp-admin/$1"
        },
        {
            "src": "/cms/(.*)",
            "dest": "https://artificialgrass.hr/homegrass.hr/cms/$1"
        },
        {
            "src": "/((?!static/|cms/|wp-admin/|sitemap.xml).*)",
            "dest": "/index.html",
            "status": 200
        }
    ]
}