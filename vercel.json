{
    "version": 2,
    "routes": [
        {
            "src": "/static/(.*)",
            "headers": {
                "Cache-Control": "public, max-age=31536000, immutable"
            }
        },
        {
            "src": "/(.*\\.js)",
            "headers": {
                "Content-Type": "application/javascript"
            }
        },
        {
            "src": "/sitemap.xml",
            "headers": {
                "Content-Type": "application/xml",
                "Cache-Control": "public, max-age=3600"
            }
        },
        {
            "src": "/cms/wp-admin/(.*)",
            "dest": "https://artificialgrass.hr/homegrass.hr/cms/wp-admin/$1"
        },
        {
            "src": "/cms/(.*)",
            "dest": "https://artificialgrass.hr/homegrass.hr/cms/$1"
        },
        {
            "src": "/(.*)",
            "dest": "/index.html",
            "status": 200
        }
    ],
    "rewrites": [
        {
            "source": "/:path*",
            "has": [
                {
                    "type": "host",
                    "value": "www.homegrass.hr"
                }
            ],
            "destination": "https://homegrass.hr/:path*"
        }
    ]
}